name: Build and Release

on:
  push:
    branches:
      - main
    tags:
      - '*'

jobs:
  build:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        container: ['debian:11', 'debian:12', 'ubuntu:20.04', 'ubuntu:22.04']
    container:
      image: ${{ matrix.container }}
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Build squid
        run: bash build.sh

      - name: Upload packages
        uses: actions/upload-artifact@v2
        with:
          name: packages
          path: ./pkgs/*.deb

      - name: Create release
        if: startsWith(github.ref, 'refs/tags/')
        uses: ncipollo/release-action@v1
        with:
          artifacts: "./pkgs/*.deb"
          tag: ${{ github.ref_name }}


